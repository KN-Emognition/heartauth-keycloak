{
  "realm": "${KC_REALM:-heartauth}",
  "displayName": "${KC_REALM_DISPLAY_NAME:-HeartAuth Showcase}",
  "enabled": true,
  "registrationAllowed": true,
  "loginWithEmailAllowed": true,
  "loginTheme": "heartAuth",
  "browserFlow": "heartAuth-browser",
  "registrationFlow": "heartAuth-register",

  "authenticatorConfig": [
    {
      "alias": "register-device-config",
      "config": {
        "orchBaseUrl": "${KC_ORCH_BASE_URL:-https://orchestrator.example.com}",
        "tokenTtl": "${KC_TOKEN_TTL:-300}"
      }
    }
  ],

  "authenticationFlows": [
    {
      "alias": "heartAuth-browser",
      "description": "Browser login only",
      "providerId": "basic-flow",
      "topLevel": true,
      "builtIn": false,
      "authenticationExecutions": [
        {
          "authenticator": "auth-username-password-form",
          "requirement": "REQUIRED",
          "priority": 0,
          "authenticatorFlow": false
        },
        {
          "authenticator": "ecg-authenticator",
          "requirement": "REQUIRED",
          "priority": 1,
          "authenticatorFlow": false
        }
      ]
    },
    {
      "alias": "heartAuth-register",
      "description": "Default registration + device register at end",
      "providerId": "basic-flow",
      "topLevel": true,
      "builtIn": false,
      "authenticationExecutions": [
        {
          "authenticator": "registration-page-form",
          "requirement": "REQUIRED",
          "priority": 0,
          "authenticatorFlow": true,
          "flowAlias": "heartAuth-register-form"
        },
        {
          "authenticator": "register-device-authenticator",
          "authenticatorConfig": "register-device-config",
          "requirement": "REQUIRED",
          "priority": 1,
          "authenticatorFlow": false
        },
        {
          "authenticator": "auth-spnego",
          "requirement": "REQUIRED",
          "priority": 2,
          "authenticatorFlow": false
        }
      ]
    },
    {
      "alias": "heartAuth-register-form",
      "description": "Standard registration steps (form-flow)",
      "providerId": "form-flow",
      "topLevel": false,
      "builtIn": false,
      "authenticationExecutions": [
        {
          "authenticator": "registration-user-creation",
          "requirement": "REQUIRED",
          "priority": 0,
          "authenticatorFlow": false
        },
        {
          "authenticator": "registration-password-action",
          "requirement": "REQUIRED",
          "priority": 1,
          "authenticatorFlow": false
        }
      ]
    }
  ],

  "clients": [
    {
      "clientId": "${KC_CLIENT_ID:-APP-ID}",
      "publicClient": "${KC_PUBLIC_CLIENT:-true}",
    "secret": "${KC_CLIENT_SECRET:-APP-SECRET}",
    "redirectUris": "${KC_REDIRECT_URIS_JSON:-[\"*\"]}",
    "webOrigins": "${KC_WEB_ORIGINS_JSON:-[\"*\"]}",
    "attributes": {
      "pkce.code.challenge.method": "${KC_PKCE_METHOD:-S256}"
    }
    }
  ],

  "browserSecurityHeaders": {
    "xFrameOptions": "${KC_XFRAME_OPTIONS:-SAMEORIGIN}",
    "contentSecurityPolicy": "${KC_CSP:-frame-ancestors *; frame-src 'self'; object-src 'none';}"
  },

  "users": [
    {
      "username": "${KC_DEMO_USERNAME:-Nervarien}",
      "enabled": true,
      "email": "${KC_DEMO_EMAIL:-nervarien@example.com}",
      "emailVerified": true,
      "firstName": "${KC_DEMO_FIRST_NAME:-Jan}",
      "lastName": "${KC_DEMO_LAST_NAME:-Nowak}",
      "credentials": [
        {
          "type": "password",
          "value": "${KC_DEMO_PASSWORD:-Nervarien}",
          "temporary": false
        }
      ],
      "requiredActions": []
    }
  ]
}
